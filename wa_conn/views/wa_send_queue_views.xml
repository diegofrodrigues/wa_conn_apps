<odoo>
    <data>
        <record id="view_wa_send_queue_form" model="ir.ui.view">
            <field name="name">wa.conn.wa.send.queue.form</field>
            <field name="model">wa.send.queue</field>
            <field name="arch" type="xml">
                <form string="WA Send Queue Item">
                    <sheet>
                        <group>
                            <field name="mass_send_id"/>
                            <field name="partner_id"/>
                            <field name="wa_account_id"/>
                            <field name="wa_template_id"/>
                            <field name="wa_message" widget="text"/>
                            <field name="wa_media" widget="binary" filename="wa_media_filename"/>
                            <field name="wa_media_filename" invisible="1"/>
                            <field name="scheduled_datetime"/>
                            <field name="status"/>
                            <field name="error_message"/>
                            <field name="last_attempt"/>
                            <field name="attempts"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_wa_send_queue_list" model="ir.ui.view">
            <field name="name">wa.conn.wa.send.queue.list</field>
            <field name="model">wa.send.queue</field>
            <field name="arch" type="xml">
                <list string="WA Send Queue">
                    <field name="mass_send_id"/>
                    <field name="partner_id"/>
                    <field name="wa_account_id"/>
                    <field name="wa_template_id"/>
                    <field name="scheduled_datetime"/>
                    <field name="status"/>
                    <field name="last_attempt"/>
                    <field name="attempts"/>
                    <field name="error_message"/>
                </list>
            </field>
        </record>

        <record id="action_wa_send_queue" model="ir.actions.act_window">
            <field name="name">WA Send Queue</field>
            <field name="res_model">wa.send.queue</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_wa_send_queue_list"/>
            <field name="target">current</field>
        </record>

    <menuitem id="menu_wa_send_queue"
          name="Send Queue"
          parent="wa_conn_root"
          action="action_wa_send_queue"
          sequence="70"/>
    </data>
</odoo>
