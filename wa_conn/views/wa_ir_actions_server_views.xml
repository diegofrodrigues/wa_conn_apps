<odoo>
    <data>
        <record id="view_server_action_form_inherit_whatsapp" model="ir.ui.view">
            <field name="name">wa.conn.ir.actions.server.form.inherit</field>
            <field name="model">ir.actions.server</field>
            <field name="inherit_id" ref="base.view_server_action_form" />
            <field name="arch" type="xml">
                <!-- Add the new action type to the dropdown -->
                <xpath expr="//field[@name='state']" position="inside">
                    <field name="state" string="Send WhatsApp"/>
                </xpath>
                <!-- Add a conditional section for send_whatsapp_message -->
                <xpath expr="//sheet" position="inside">
                    <group>
                        <field name="wa_account_id" placeholder="Select WA account" invisible="state != 'send_wa_message'" required="1" string="WA Account"/>
                        <field name="wa_template_id"
                            invisible="state != 'send_wa_message'"
                            string="WA Template"
                            domain="[('model_id', '=', model_id)]"
                            context="{'default_model_id': model_id}"
                        />
                        <field 
                            name="partner_ids" 
                            widget="many2many_tags" 
                            placeholder="Select partners"
                            invisible="state != 'send_wa_message'"
                            />
                        <field 
                            name="model_partner" 
                            invisible="state != 'send_wa_message'"
                            string="Model Partner"
                            />
                        <field 
                            name="wa_message" 
                            widget="text" 
                            nolabel="1" 
                            placeholder="Type your WA message here..."
                            invisible="state != 'send_wa_message' or wa_template_id != False"
                            />
                        <field 
                            name="wa_media" 
                            widget="binary" 
                            filename="wa_media_filename"
                            invisible="state != 'send_wa_message' or wa_template_id != False"
                            />
                        <field 
                            name="wa_media_filename" 
                            invisible="1"
                            />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>