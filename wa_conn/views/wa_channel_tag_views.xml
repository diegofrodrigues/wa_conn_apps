<odoo>
    <data>
        <record id="view_wa_channel_tag_list" model="ir.ui.view">
            <field name="name">wa.channel.tag.list</field>
            <field name="model">wa.channel.tag</field>
            <field name="arch" type="xml">
                <list string="WA Tags">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </list>
            </field>
        </record>

        <record id="view_wa_channel_tag_form" model="ir.ui.view">
            <field name="name">wa.channel.tag.form</field>
            <field name="model">wa.channel.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_wa_channel_tag" model="ir.actions.act_window">
            <field name="name">Channel Tags</field>
            <field name="res_model">wa.channel.tag</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_wa_channel_tag" name="Tags" parent="wa_settings" action="action_wa_channel_tag" sequence="20"/>
    </data>
</odoo>
