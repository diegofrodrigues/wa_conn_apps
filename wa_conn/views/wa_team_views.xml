<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_wa_team_form" model="ir.ui.view">
        <field name="name">wa.team.form</field>
        <field name="model">wa.team</field>
        <field name="arch" type="xml">
            <form string="WA Team">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <field name="agent_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_wa_team_list" model="ir.ui.view">
        <field name="name">wa.team.list</field>
        <field name="model">wa.team</field>
        <field name="arch" type="xml">
            <list string="WA Teams">
                <field name="name"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record id="action_wa_team" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">wa.team</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>
                Manage WhatsApp teams and assign agents to each team.
            </p>
        </field>
    </record>
    <menuitem id="wa_team_menu" name="Teams" parent="wa_settings" sequence="30" action="action_wa_team"/>
</odoo>
