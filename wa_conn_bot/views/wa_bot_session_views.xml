<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_wa_bot_session_form" model="ir.ui.view">
        <field name="name">wa.bot.session.form</field>
        <field name="model">wa.bot.session</field>
        <field name="arch" type="xml">
            <form string="Bot Session">
                <header>
                    <button name="action_reopen" string="Reopen Session" type="object" 
                            class="oe_highlight" invisible="state == 'active'"/>
                    <button name="action_close" string="Close Session" type="object" 
                            invisible="state != 'active'"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,expired,closed"/>
                </header>
                <sheet>
                    <field name="color" widget="color_picker" invisible="1"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Contact">
                            <field name="phone"/>
                            <field name="contact_name"/>
                            <field name="wa_account_id"/>
                        </group>
                        <group string="Bot">
                            <field name="bot_id"/>
                            <field name="current_flow_step_id"/>
                            <field name="waiting_for_step_id"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Timing">
                            <field name="start_time"/>
                            <field name="last_activity"/>
                            <field name="end_time"/>
                        </group>
                        <group string="Statistics">
                            <field name="message_count"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Session Variables" name="variables">
                            <field name="variables" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_wa_bot_session_list" model="ir.ui.view">
        <field name="name">wa.bot.session.list</field>
        <field name="model">wa.bot.session</field>
        <field name="arch" type="xml">
            <list string="Bot Sessions" decoration-muted="state != 'active'">
                <field name="phone"/>
                <field name="contact_name"/>
                <field name="bot_id"/>
                <field name="wa_account_id"/>
                <field name="start_time"/>
                <field name="last_activity"/>
                <field name="message_count"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_wa_bot_session_search" model="ir.ui.view">
        <field name="name">wa.bot.session.search</field>
        <field name="model">wa.bot.session</field>
        <field name="arch" type="xml">
            <search string="Bot Sessions">
                <field name="phone"/>
                <field name="contact_name"/>
                <field name="bot_id"/>
                <field name="wa_account_id"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter string="Today" name="today" 
                        domain="[('start_time', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week" 
                        domain="[('start_time', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Bot" name="group_bot" context="{'group_by': 'bot_id'}"/>
                    <filter string="Account" name="group_account" context="{'group_by': 'wa_account_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Start Date" name="group_start" context="{'group_by': 'start_time'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_wa_bot_session" model="ir.actions.act_window">
        <field name="name">Bot Sessions</field>
        <field name="res_model">wa.bot.session</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No active sessions yet
            </p>
            <p>
                Sessions will appear here when contacts interact with your bots.
            </p>
        </field>
    </record>
</odoo>
