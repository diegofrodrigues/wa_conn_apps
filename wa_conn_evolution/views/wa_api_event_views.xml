<odoo>
    <record id="view_wa_api_event_list" model="ir.ui.view">
        <field name="name">wa.api.event.list</field>
        <field name="model">wa.api.event</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_wa_api_event_form" model="ir.ui.view">
        <field name="name">wa.api.event.form</field>
        <field name="model">wa.api.event</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
            </form>
        </field>
    </record>

    <record id="action_wa_api_event" model="ir.actions.act_window">
        <field name="name">WA API Events</field>
        <field name="res_model">wa.api.event</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Novo menu Settings dentro do WA Conn -->
    <!-- <menuitem id="menu_wa_settings" name="Settings" parent="wa_conn.menu_wa_conn_root" sequence="100"/> -->
    <menuitem id="wa_api_event" name="Eventos Evolution" parent="wa_conn.wa_settings" action="action_wa_api_event" sequence="10"/>
</odoo>
